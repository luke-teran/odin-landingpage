html {
    font-family: arial;
    font-size: 22px;
}

body {
    display: flex;
    flex-direction: column;
    height: 100vh;
}

.secondary-text,
h2 {
    font-size: 18px;
    color: #E5E7EB;
}

* {
    border: solid red 1px;
}

.header,
.footer,
#hero
 {
    background: #1F2937;
    padding: 0 4em
}

.header {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.modal-right {
    display: flex;
    flex-direction: row;
    flex: auto;
    justify-content: space-evenly;
    align-items: center;
    max-width: 50%;
    gap: 1em;
}

.modal-left {
    display: flex;
    flex-direction: column;
    max-width: 600px;    
}

.modal-2col {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.modal-2row {
    display: flex;
    flex-direction: column;
    padding: 0 4em
}

h2 {
    font-size: 48px;
    font-weight: bolder;
    color: #F9FAF8;
}

.signup {
    color: white;
    font-weight: bolder;
    display: flex;
    justify-content: flex-start;
}

.signup div {
    background: #3882F6;
    padding: 10px 40px;
    border-radius: 15%
}

#quote {
    padding:5em;
    background: #E5E7EB;
}

#quote-text {
    font-size: 36px;
    font-style: italic;
    color: #1F2937;
}

#quote-author {
    text-align: right;
    font-weight: bold;
}

#seperated-cols {
    display:flex;
    flex-wrap: wrap;
    gap: 2em;
}

li #seperated-cols {
    width: auto;
    height: auto;
}


#seperated-cols div {
    width: 150px;
}

#seperated-cols .modal-2row img {
    width: 150px;
    height: 150px;
    border: solid blue 4px;
    background: red;
}


